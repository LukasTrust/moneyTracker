/**
 * CSV Import & Mapping Component
 * 
 * Vereinheitlichte Ansicht fÃ¼r CSV-Upload und Mapping-Konfiguration
 * 
 * FEATURES:
 * - 3 Pflichtfelder: Datum, Betrag, EmpfÃ¤nger/Absender
 * - CSV-Upload mit Preview
 * - Intelligente Mapping-VorschlÃ¤ge (AI)
 * - Gespeicherte Mappings laden (Readonly)
 * - "Mapping Ã¤ndern" Button bei CSV-Upload
 * - CSV-Header-Validierung
 * - Live-Preview mit Hervorhebung
 * - Kategorie-Zuordnung via CategoryMatcher (Backend)
 */

import React, { useState, useEffect } from 'react';
import { previewCsv, suggestMapping, importCsv } from '../../services/csvImportApi';
import { getMappings } from '../../services/mappingApi';
import { useToast } from '../../hooks/useToast';

const REQUIRED_FIELDS = ['date', 'amount', 'recipient'];
const ALL_FIELDS = [...REQUIRED_FIELDS];

// Field configuration
const FIELD_CONFIG = {
  date: { label: 'Datum', icon: 'ðŸ“…', description: 'Transaktionsdatum' },
  amount: { label: 'Betrag', icon: 'ðŸ’°', description: 'Transaktionsbetrag' },
  recipient: { label: 'EmpfÃ¤nger/Absender', icon: 'ðŸ‘¤', description: 'Gegenpartei der Transaktion' },
};

const getFieldLabel = (field) => FIELD_CONFIG[field]?.label || field;
const getFieldIcon = (field) => FIELD_CONFIG[field]?.icon || 'ðŸ“„';
const getFieldDescription = (field) => FIELD_CONFIG[field]?.description || '';

export default function CsvImportMapping({ accountId, onImportSuccess }) {
  // State management
  const [file, setFile] = useState(null);
  const [csvHeaders, setCsvHeaders] = useState([]);
  const [previewData, setPreviewData] = useState(null);
  const [mapping, setMapping] = useState({
    date: '',
    amount: '',
    recipient: '',
  });
  const [existingMapping, setExistingMapping] = useState(null);
  const [mappingEditable, setMappingEditable] = useState(false);
  const [csvHeadersMismatch, setCsvHeadersMismatch] = useState(false);
  const [isLoading, setIsLoading] = useState(false);
  const [isLoadingMappings, setIsLoadingMappings] = useState(false);
  const [isImporting, setIsImporting] = useState(false);
  const [validationErrors, setValidationErrors] = useState([]);
  const [highlightedColumn, setHighlightedColumn] = useState(null);

  const { showToast } = useToast();

  // Load existing mappings when account changes
  useEffect(() => {
    if (accountId) {
      loadExistingMappings();
    }
  }, [accountId]);

  /**
   * Load existing mappings from backend
   */
  const loadExistingMappings = async () => {
    setIsLoadingMappings(true);
    try {
      const mappings = await getMappings(accountId);
      
      if (mappings && mappings.length > 0) {
        // Convert array to object
        const mappingObj = {};
        mappings.forEach((m) => {
          mappingObj[m.standard_field] = m.csv_header;
        });
        
        setExistingMapping(mappingObj);
        setMapping(mappingObj);
        setMappingEditable(false);
      } else {
        setExistingMapping(null);
        setMappingEditable(true);
      }
    } catch (error) {
      console.error('Error loading mappings:', error);
      // No mappings exist yet - that's fine
      setExistingMapping(null);
      setMappingEditable(true);
    } finally {
      setIsLoadingMappings(false);
    }
  };

  /**
   * Handle file selection and preview
   */
  const handleFileChange = async (event) => {
    const selectedFile = event.target.files?.[0];
    if (!selectedFile) return;

    setIsLoading(true);
    setFile(selectedFile);

    try {
      // Get preview
      const preview = await previewCsv(selectedFile);
      setPreviewData(preview);
      setCsvHeaders(preview.headers);

      // Check if existing mapping matches CSV headers
      if (existingMapping) {
        const existingHeaders = Object.values(existingMapping);
        const allHeadersPresent = existingHeaders.every((header) =>
          preview.headers.includes(header)
        );

        if (!allHeadersPresent) {
          // CSV structure doesn't match saved mapping
          setCsvHeadersMismatch(true);
          setMappingEditable(true);
          showToast(
            'Warnung: CSV-Struktur passt nicht zum gespeicherten Mapping. Bitte Ã¼berprÃ¼fen.',
            'warning'
          );
        } else {
          setCsvHeadersMismatch(false);
        }
      } else {
        // No existing mapping - get AI suggestions
        const suggestions = await suggestMapping(selectedFile);
        
        // Apply suggestions with high confidence
        const newMapping = { ...mapping };
        Object.entries(suggestions.suggestions).forEach(([fieldName, suggestion]) => {
          if (suggestion.suggested_header && suggestion.confidence > 0.6) {
            newMapping[fieldName] = suggestion.suggested_header;
          }
        });
        setMapping(newMapping);
        setMappingEditable(true);
      }

      showToast('CSV erfolgreich geladen', 'success');
    } catch (error) {
      console.error('Error loading CSV:', error);
      showToast(
        error.response?.data?.detail || 'Fehler beim Laden der CSV-Datei',
        'error'
      );
      handleReset();
    } finally {
      setIsLoading(false);
    }
  };

  /**
   * Handle mapping change for a field
   */
  const handleMappingChange = (fieldName, csvHeader) => {
    if (!mappingEditable) return; // Prevent changes in readonly mode
    
    setMapping((prev) => ({
      ...prev,
      [fieldName]: csvHeader,
    }));

    // Clear validation errors when mapping changes
    setValidationErrors([]);
  };

  /**
   * Enable mapping editing
   */
  const enableMappingEdit = () => {
    setMappingEditable(true);
  };

  /**
   * Validate mapping before import
   */
  const validateCurrentMapping = () => {
    if (!file) {
      return {
        isValid: false,
        errors: ['Bitte wÃ¤hlen Sie zuerst eine CSV-Datei aus'],
      };
    }

    const errors = [];
    
    // Check all required fields are mapped
    REQUIRED_FIELDS.forEach((field) => {
      if (!mapping[field]) {
        errors.push(`${getFieldLabel(field)} muss gemappt werden`);
      }
    });

    // Check all mapped headers exist in CSV
    Object.entries(mapping).forEach(([field, header]) => {
      if (header && !csvHeaders.includes(header)) {
        errors.push(`Header "${header}" existiert nicht in der CSV-Datei`);
      }
    });

    setValidationErrors(errors);
    
    return {
      isValid: errors.length === 0,
      errors,
    };
  };

  /**
   * Handle import
   */
  const handleImport = async () => {
    const validation = validateCurrentMapping();
    if (!validation.isValid) {
      showToast('Bitte beheben Sie die Fehler vor dem Import', 'error');
      return;
    }

    setIsImporting(true);

    try {
      const result = await importCsv(accountId, mapping, file);

      if (result.success) {
        showToast(
          `Erfolgreich ${result.imported_count} Transaktionen importiert`,
          'success'
        );

        // Show additional info
        if (result.duplicate_count > 0) {
          showToast(
            `${result.duplicate_count} Duplikate Ã¼bersprungen`,
            'info'
          );
        }
        if (result.error_count > 0) {
          showToast(
            `${result.error_count} Zeilen mit Fehlern`,
            'warning'
          );
        }

        // Reload mappings (they were saved after import)
        await loadExistingMappings();

        // Reset file and notify parent
        handleReset();
        onImportSuccess?.();
      } else {
        throw new Error(result.message || 'Import fehlgeschlagen');
      }
    } catch (error) {
      console.error('Import error:', error);
      showToast(
        error.response?.data?.detail || 'Fehler beim Importieren',
        'error'
      );
    } finally {
      setIsImporting(false);
    }
  };

  /**
   * Reset component state
   */
  const handleReset = () => {
    setFile(null);
    setCsvHeaders([]);
    setPreviewData(null);
    setMapping({
      date: existingMapping?.date || '',
      amount: existingMapping?.amount || '',
      recipient: existingMapping?.recipient || '',
    });
    setValidationErrors([]);
    setHighlightedColumn(null);
    setCsvHeadersMismatch(false);
    
    // Reset file input
    const fileInput = document.getElementById('csv-file-input');
    if (fileInput) fileInput.value = '';
  };
    setPreviewData(null);
    setMapping({
      date: '',
      amount: '',
      sender: '',
      recipient: '',
      category: '',
    });
    setValidationErrors([]);
    setHighlightedColumn(null);
    
    // Reset file input
    const fileInput = document.getElementById('csv-file-input');
    if (fileInput) fileInput.value = '';
  };

  /**
   * Check if import button should be enabled
   */
  const canImport = () => {
    if (!file || isImporting) return false;
    return REQUIRED_FIELDS.every((field) => mapping[field]);
  };

  /**
   * Get column index for highlighting
   */
  const getColumnIndex = (header) => {
    return csvHeaders.indexOf(header);
  };

  return (
    <div className="space-y-6">
      {/* Header */}
      <div>
        <h2 className="text-2xl font-bold text-gray-900">CSV Import & Mapping</h2>
        <p className="mt-2 text-gray-600">
          Laden Sie eine CSV-Datei hoch und ordnen Sie die Spalten den entsprechenden Feldern zu.
        </p>
      </div>

      {/* File Upload Section */}
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 className="text-lg font-semibold text-gray-900 mb-4">1. CSV-Datei auswÃ¤hlen</h3>
        
        <div className="flex items-center gap-4">
          <input
            id="csv-file-input"
            type="file"
            accept=".csv"
            onChange={handleFileChange}
            disabled={isLoading}
            className="block w-full text-sm text-gray-500
              file:mr-4 file:py-2 file:px-4
              file:rounded-lg file:border-0
              file:text-sm file:font-semibold
              file:bg-primary-50 file:text-primary-700
              hover:file:bg-primary-100
              disabled:opacity-50 disabled:cursor-not-allowed"
          />
          
          {file && (
            <button
              onClick={handleReset}
              className="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
            >
              ZurÃ¼cksetzen
            </button>
          )}
        </div>

        {file && previewData && (
          <div className="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <div className="flex items-center gap-2 text-sm text-blue-800">
              <span>ðŸ“„</span>
              <span className="font-medium">{file.name}</span>
              <span className="text-blue-600">â€¢</span>
              <span>{previewData.total_rows} Zeilen</span>
              <span className="text-blue-600">â€¢</span>
              <span>{csvHeaders.length} Spalten</span>
            </div>
          </div>
        )}
      </div>

      {/* Mapping Configuration Section */}
      <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 className="text-lg font-semibold text-gray-900 mb-4">
          2. Felder zuordnen
        </h3>

        <div className="space-y-4">
          {ALL_FIELDS.map((fieldName) => {
            const isRequired = REQUIRED_FIELDS.includes(fieldName);
            const isMapped = mapping[fieldName] !== '';

            return (
              <div key={fieldName} className="flex items-center gap-4">
                {/* Field Label */}
                <div className="w-64 flex items-center gap-2">
                  <span className="text-2xl">{getFieldIcon(fieldName)}</span>
                  <div className="flex-1">
                    <label className="block text-sm font-medium text-gray-900">
                      {getFieldLabel(fieldName)}
                      {isRequired && (
                        <span className="text-red-500 ml-1">*</span>
                      )}
                    </label>
                    {!isRequired && (
                      <span className="text-xs text-gray-500">optional</span>
                    )}
                  </div>
                </div>

                {/* Mapping Dropdown */}
                <div className="flex-1">
                  <select
                    value={mapping[fieldName]}
                    onChange={(e) => handleMappingChange(fieldName, e.target.value)}
                    onMouseEnter={() => setHighlightedColumn(mapping[fieldName])}
                    onMouseLeave={() => setHighlightedColumn(null)}
                    disabled={!file}
                    className={`
                      block w-full px-3 py-2 text-sm border rounded-lg
                      focus:outline-none focus:ring-2 focus:ring-primary-500
                      disabled:bg-gray-100 disabled:cursor-not-allowed
                      ${isMapped ? 'bg-green-50 border-green-300' : 'bg-white border-gray-300'}
                      ${isRequired && !isMapped && file ? 'border-red-300' : ''}
                    `}
                  >
                    <option value="">
                      {file ? '-- Bitte wÃ¤hlen --' : '-- CSV zuerst hochladen --'}
                    </option>
                    {csvHeaders.map((header) => (
                      <option key={header} value={header}>
                        {header}
                      </option>
                    ))}
                  </select>
                </div>

                {/* Status Indicator */}
                <div className="w-6">
                  {isMapped && (
                    <span className="text-green-500">âœ“</span>
                  )}
                </div>
              </div>
            );
          })}
        </div>

        {/* Validation Errors */}
        {validationErrors.length > 0 && (
          <div className="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
            <h4 className="text-sm font-semibold text-red-800 mb-2">
              Bitte beheben Sie folgende Fehler:
            </h4>
            <ul className="list-disc list-inside text-sm text-red-700 space-y-1">
              {validationErrors.map((error, idx) => (
                <li key={idx}>{error}</li>
              ))}
            </ul>
          </div>
        )}
      </div>

      {/* Preview Section */}
      {previewData && (
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 className="text-lg font-semibold text-gray-900 mb-4">
            3. Vorschau (erste {previewData.sample_rows.length} Zeilen)
          </h3>

          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200 text-sm">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">
                    #
                  </th>
                  {csvHeaders.map((header) => {
                    const isHighlighted = highlightedColumn === header;
                    const isMapped = Object.values(mapping).includes(header);

                    return (
                      <th
                        key={header}
                        className={`
                          px-3 py-2 text-left text-xs font-medium uppercase
                          transition-colors
                          ${isHighlighted ? 'bg-blue-100 text-blue-900' : ''}
                          ${isMapped && !isHighlighted ? 'bg-green-50 text-green-900' : 'text-gray-500'}
                        `}
                      >
                        {header}
                      </th>
                    );
                  })}
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {previewData.sample_rows.map((row) => (
                  <tr key={row.row_number} className="hover:bg-gray-50">
                    <td className="px-3 py-2 whitespace-nowrap text-gray-500">
                      {row.row_number}
                    </td>
                    {csvHeaders.map((header) => {
                      const isHighlighted = highlightedColumn === header;
                      const isMapped = Object.values(mapping).includes(header);

                      return (
                        <td
                          key={header}
                          className={`
                            px-3 py-2 whitespace-nowrap
                            transition-colors
                            ${isHighlighted ? 'bg-blue-50 font-medium' : ''}
                            ${isMapped && !isHighlighted ? 'bg-green-50' : ''}
                          `}
                        >
                          {row.data[header] || (
                            <span className="text-gray-400 italic">leer</span>
                          )}
                        </td>
                      );
                    })}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      )}

      {/* Import Button */}
      <div className="flex justify-end gap-4">
        <button
          onClick={() => validateCurrentMapping()}
          disabled={!file}
          className="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Mapping validieren
        </button>
        
        <button
          onClick={handleImport}
          disabled={!canImport()}
          className="px-6 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
        >
          {isImporting ? (
            <>
              <svg className="animate-spin h-4 w-4" viewBox="0 0 24 24">
                <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" fill="none" />
                <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
              </svg>
              <span>Importiere...</span>
            </>
          ) : (
            <>
              <span>ðŸš€</span>
              <span>Import starten</span>
            </>
          )}
        </button>
      </div>
    </div>
  );
}
